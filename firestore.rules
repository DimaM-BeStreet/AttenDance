rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function getUserBusinessId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.businessId;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'superAdmin';
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isManager() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isManagerOfBusiness(businessId) {
      return isManager() && getUserBusinessId() == businessId;
    }
    
    function isTeacher() {
      return isAuthenticated() && getUserRole() == 'teacher';
    }
    
    function isTeacherOfBusiness(businessId) {
      return isTeacher() && getUserBusinessId() == businessId;
    }
    
    function isValidatedTeacher(businessId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/teacherSessions/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/teacherSessions/$(request.auth.uid)).data.businessId == businessId;
    }
    
    // Root level collections
    
    // Users collection - readable by authenticated users (own record or same business), writable by superadmin or admin
    match /users/{userId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == userId || 
        isSuperAdmin() || 
        isManager()
      );
      // Allow listing/querying users if:
      // - SuperAdmin (can see all)
      // - Admin/Manager querying their own businessId
      allow list: if isAuthenticated() && (
        isSuperAdmin() || 
        (isManager() && request.query.limit > 0 && resource.data.businessId == getUserBusinessId())
      );
      allow create, update: if isSuperAdmin() || isManager();
      allow delete: if isSuperAdmin();
    }
    
    // Teacher links - readable/writable via Cloud Functions only
    match /teacherLinks/{linkToken} {
      allow read, write: if false; // Only Cloud Functions
    }
    
    // Teacher sessions - readable/deletable by own UID, create via Cloud Functions only
    match /teacherSessions/{uid} {
      allow read, delete: if isAuthenticated() && request.auth.uid == uid;
      allow create, update: if false; // Only Cloud Functions
    }
    
    // Businesses collection
    match /businesses/{businessId} {
      allow read: if isSuperAdmin() || isManagerOfBusiness(businessId);
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() || isManagerOfBusiness(businessId);
      allow delete: if isSuperAdmin();
      
      // Students subcollection
      match /students/{studentId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId) || isValidatedTeacher(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
      }
      
      // Teachers subcollection
      match /teachers/{teacherId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
      }
      
      // Dance styles subcollection
      match /danceStyles/{styleId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
      }
      
      // Locations subcollection
      match /locations/{locationId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
      }
      
      // Class templates subcollection
      match /classTemplates/{templateId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
      }
      
      // Class instances subcollection
      match /classInstances/{instanceId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId) || isValidatedTeacher(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
      }
      
      // Courses subcollection
      match /courses/{courseId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
      }
      
      // Enrollments subcollection
      match /enrollments/{enrollmentId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId) || isValidatedTeacher(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
      }
      
      // Attendance subcollection
      match /attendance/{attendanceId} {
        allow read: if isSuperAdmin() || isManagerOfBusiness(businessId) || isValidatedTeacher(businessId);
        allow write: if isSuperAdmin() || isManagerOfBusiness(businessId);
        // Teachers write via Cloud Functions (markAttendance)
      }
    }
    
    // Root-level temp students collection
    match /tempStudents/{tempStudentId} {
      // Allow read for authenticated users - let service filter by businessId
      allow read: if isAuthenticated();
      
      // Allow create/update/delete for authenticated users
      // The service layer will handle business logic for permissions
      allow create, update, delete: if isAuthenticated();
    }
    
    // Root-level class instances collection
    match /classInstances/{instanceId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (isSuperAdmin() || isManager());
    }
  }
}
