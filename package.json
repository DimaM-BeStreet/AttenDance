{
  "name": "attendance-system",
  "version": "1.0.0",
  "description": "AttenDance - Dance Studio Management System",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.config.cjs --mode production",
    "dev": "webpack --config webpack.config.cjs --mode development --watch",
    "populate": "node populate-db.js",
    "serve": "npm run build && firebase emulators:start",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "logs": "firebase functions:log"
  },
  "keywords": [
    "dance",
    "studio",
    "attendance",
    "management"
  ],
  "author": "DimaM-BeStreet",
  "license": "MIT",
  "devDependencies": {
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "dotenv-webpack": "^8.1.1",
    "firebase-tools": "^13.0.0",
    "style-loader": "^3.3.4",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "firebase": "^10.7.0",
    "firebase-admin": "^13.6.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "xlsx": "^0.18.5"
  }
}
